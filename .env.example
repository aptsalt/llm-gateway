# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://gateway:gateway@localhost:5432/gateway

# Redis
REDIS_URL=redis://localhost:6379

# Provider API Keys (at least one recommended)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
TOGETHER_API_KEY=

# Ollama (local - always enabled)
OLLAMA_URL=http://localhost:11434

# Gateway Admin
ADMIN_API_KEY=gw-admin-change-me

# Routing
DEFAULT_ROUTING_STRATEGY=balanced  # cost | quality | latency | balanced

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_SIMILARITY_THRESHOLD=0.95
CACHE_MAX_ENTRIES=10000

# Budget Limits (optional)
# GLOBAL_MONTHLY_USD_BUDGET=100
# GLOBAL_MONTHLY_TOKEN_BUDGET=10000000

# Observability
ENABLE_METRICS=true
LOG_LEVEL=info
REDACT_PROMPTS=true

